#!/usr/bin/env bash
set -e -o pipefail

case "$1" in

 jitpack)
   $0 cs launch --jvm graalvm-ce-java11:20.1.0 mill-i -- -D publish-full-sjs=false __.publishM2Local
   $0 cs launch --jvm graalvm-ce-java11:20.1.0 mill-i -- -D publish-full-sjs=true  __.publishM2Local
 ;;

 servor)
   npx servor ${2:-"gh-pages"} ${3:-"index.html"} 8888 --reload --browse
 ;;

 gh-pages)
   $0 mill '{__.docJar,examples.__.fastOpt}'
   find out -path '*docJar/dest/out.jar' | xargs -IFILE bash -c 'jar -xf FILE -C $(dirname FILE) /'
   mkdir -p gh-pages
   cp -rfv docs/index* docs/404* README.md docs/ examples/ gh-pages/
   find out/ -path '*fastOpt/dest/out*' | cpio -p -dumv gh-pages/
   find out/ -path '*docJar/dest/javadoc/*' | cpio -p -dumv gh-pages/
   find gh-pages/docs -type d -exec touch {}/.nojekyll \;
 ;;

 cs)
   test -x cs || {
     curl -o cs -qL https://git.io/coursier-cli
     chmod +x cs
   }
   ./cs "${@:2}"
 ;;

 scalafmt)
   $0 cs launch scalafmt -- --mode diff --diff-branch master "${@:2}"
 ;;

 mdoc-gen)
   $0 mill drivers.all._.mdocProperties
   $0 mdoc-js -i docs/doc1.md -o docs/doc2.md
 ;;

 mdoc)
   $0 mdoc- "" "${@:2}"
 ;;

 mdoc-js)
   $0 mdoc- -js "${@:2}"
 ;;

 mdoc-)
   $0 cs launch org.scalameta:mdoc${2}_2.12:2.2.0 --extra-jars out/drivers/all/mdocProperties/dest/ -- "${@:3}"
 ;;

 mill)
   $0 cs launch mill -- "${@:2}"
 ;;

 test)
   $0 mill  __.compile
 ;;

 example)
   trap "trap - SIGTERM && kill -- -$$" SIGINT SIGTERM SIGKILL EXIT
   $0 mill examples.$2.__.fastOpt
   $0 servor . examples/$2/src/index.html &
   $0 mill -w examples.$2.__.fastOpt &
   wait
 ;;

 mill-i)
   $0 cs launch mill-interactive -- -i "${@:2}"
 ;;

esac
